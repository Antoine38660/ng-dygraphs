{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "umd",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "lib": ["dom", "es6"],
    "stripInternal": true,
    "skipLibCheck": true,
        "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node"
    ]
  },
  "files": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": { "strictMetadataEmit": true }
}
